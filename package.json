{
  "name": "amlovey-omnishader-vsc",
  "displayName": "OmniShader Tools For Unity",
  "description": "Visual Studio Code extension for Unity shader programming",
  "version": "0.0.1",
  "publisher": "amlovey",
  "engines": {
    "vscode": "^1.103.0"
  },
  "icon": "images/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "UnityShader",
        "configuration": "./language-configuration.json",
        "extensions": [
          ".shader",
          ".cginc",
          ".compute",
          ".hlsl",
          ".raytrace",
          ".std"
        ]
      }
    ],
    "grammars": [
      {
        "language": "UnityShader",
        "scopeName": "source.shader",
        "path": "./syntaxes/UnityShader.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "UnityShader",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "chokidar": "^4.0.3"
  }
}
